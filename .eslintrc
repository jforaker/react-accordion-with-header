{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "curly": 0,
    "radix": 2,
    "wrap-iife": 2,
    "brace-style": 0,
    "comma-style": 2,
    "consistent-this": 0,
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-use-before-define": [2, "nofunc"],
    "quotes": [2, "single"],
    "keyword-spacing": 2,
    "space-before-blocks": [2, "always"],
    "space-in-parens": [2, "never"],
    "space-unary-ops": 2
  }
}
